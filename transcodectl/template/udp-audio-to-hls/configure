#!/bin/bash

_id="$1"

echo "export UDPAUDIO2HLS_AUDIO_CODEC=${UDPAUDIO2HLS_AUDIO_CODEC:-copy}" > "${TRANSCODE_INSTANCED_PATH}/${_id}/build.env"
echo "export UDPAUDIO2HLS_AUDIO_BITRATE=${UDPAUDIO2HLS_AUDIO_BITRATE:-}" >> "${TRANSCODE_INSTANCED_PATH}/${_id}/build.env"
echo "export UDPAUDIO2HLS_HLS_BASE_URL=${UDPAUDIO2HLS_HLS_BASE_URL:-}" >> "${TRANSCODE_INSTANCED_PATH}/${_id}/build.env"
echo "export UDPAUDIO2HLS_HLS_FLAGS=${UDPAUDIO2HLS_HLS_FLAGS:-}" >> "${TRANSCODE_INSTANCED_PATH}/${_id}/build.env"
echo "export UDPAUDIO2HLS_HLS_LIST_SIZE=${UDPAUDIO2HLS_HLS_LIST_SIZE:-}" >> "${TRANSCODE_INSTANCED_PATH}/${_id}/build.env"
echo "export UDPAUDIO2HLS_HLS_SEGMENT_FILENAME=${UDPAUDIO2HLS_HLS_SEGMENT_FILENAME:-}" >> "${TRANSCODE_INSTANCED_PATH}/${_id}/build.env"
echo "export UDPAUDIO2HLS_HLS_TIME=${UDPAUDIO2HLS_HLS_TIME:-}" >> "${TRANSCODE_INSTANCED_PATH}/${_id}/build.env"
echo "export UDPAUDIO2HLS_META_SERVICE_NAME=${UDPAUDIO2HLS_META_SERVICE_NAME:-}" >> "${TRANSCODE_INSTANCED_PATH}/${_id}/build.env"
echo "export UDPAUDIO2HLS_META_SERVICE_PROVIDER=${UDPAUDIO2HLS_META_SERVICE_PROVIDER:-}" >> "${TRANSCODE_INSTANCED_PATH}/${_id}/build.env"
